@page
@model Dashboard
@{
    ViewData["Title"] = "Intern Dashboard";
}

<div class="container">
    <h2>@ViewData["Title"]</h2>

    <div class="row">
        <div class="col-md-6">
            <h3>Your Time Entries</h3>
            <table class="table">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Hours</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var day in Model.DaysOfWeek)
                    {
                        var entry = Model.TimeEntries.FirstOrDefault(e => e.Day == day);
                        <tr>
                            <td>@day.ToString()</td>
                            <td>@(entry?.TimeIn.ToString(@"hh\:mm") ?? "N/A")</td>
                            <td>@(entry?.TimeOut.ToString(@"hh\:mm") ?? "N/A")</td>
                            <td>@(entry.Approved ? "Approved" : "Pending")</td>
                        </tr>
                    }
