@page
@model TimeEntryModel
@{
    ViewData["Title"] = "Intern Dashboard";
}

<div class="container">
    <h2>@ViewData["Title"]</h2>

    <div class="row">
        <div class="col-md-6">
            <h3>Your Time Entries</h3>
            <table class="table">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Hours</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var entry in Model.TimeEntries)
                    {
                        <tr>
                            <td>@entry.Date.ToShortDateString()</td>
                            <td>@entry.Hours</td>
                            <td>@(entry.Approved ? "Approved" : "Pending")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="col-md-6">
            <h3>Submit New Time Entry</h3>
            <form asp-page-handler="SubmitTimeEntry" method="post">
                <div class="form-group">
                    <label for="date">Date</label>
                    <input type="date" class="form-control" id="date" name="date" required>
                </div>
                <div class="form-group">
                    <label for="Time In">Time In</label>
                    <input type="number" class="form-control" id="hours" name="hours" min="0" step="1" required>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>
