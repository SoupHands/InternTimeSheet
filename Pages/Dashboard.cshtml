@page
@model DashboardModel
@{
    ViewData["Title"] = "Intern Dashboard";
}

<div class="container">
    <h2>@ViewData["Title"]</h2>

    <div class="row">
        <div class="col-md-6">
            <h3>Your Time Entries</h3>
            <table class="table">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Hours</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var day in Model.DaysOfWeek)
                    {
                        var entry = Model.TimeEntries.FirstOrDefault(e => e.Day == day);
                        if (day != null && entry.TimeIn.HasValue && entry.Time_Out.HasValue)
                        {
                            <tr>
                                <td>@day.ToString()</td>
                                <td>@(entry.TimeIn.Value.ToString(@"hh\:mm") ?? "N/A")</td>
                                <td>@(entry.Time_Out.Value.ToString(@"hh\:mm") ?? "N/A")</td>
                               @* <td>@(entry.Approved; "Approved": "Pending")</td>*@
                            </tr>
                        }
                    }
                </tbody>
            </table>
       
</div>
