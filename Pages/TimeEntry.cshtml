@page
@using Microsoft.EntityFrameworkCore.Storage
@model TimeEntryModel;

@{
    ViewData["Title"] = "Time Entry";
    var TimeIn = "";
    var TimeOut = "";

    if (Request.Method == "post")
    {
        TimeIn = Request.Form["timein"];
        TimeOut = Request.Form["timeout"];

        var db = Database.Open(Request.Method);
        var insertcommand = "insert into timeentries (timein, time_out) values(@0, @1)";
        db.execute(insertcommand, TimeIn, TimeOut);
        Response.Redirect("~/dashboard");
    }

}

<div class="container">
    <h2 class="my-4">Time Entry</h2>

    <form method="post" class="needs-validation" novalidate>
        <div class="form-row">

